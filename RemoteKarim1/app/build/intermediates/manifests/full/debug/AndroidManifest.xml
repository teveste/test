<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sony.nfx.irremote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="com.sony.remotecontrol.permission.API" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <uses-library android:name="com.sony.remotecontrol.ir.v1" />

        <activity
            android:name="com.example.sony.nfx.irremote.DeviceListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sony.nfx.irremote.RemoteActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.example.sony.nfx.irremote.DeviceObserverActivity"
            android:label="@string/app_name" />
    </application>

</manifest>